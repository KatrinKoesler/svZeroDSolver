{
    "description": {
            "description of test case" : "runs a  0D model of a cardiac chamber with inlet and outlet valves and downstream circulation model (proximal and distal vessel elements) as in Caruel et al. 2013"
    },
    "boundary_conditions": [
        {
            "bc_name": "IN",
            "bc_type": "PRESSURE",
            "bc_values": {
                "P": [100, 100],
                "t": [0, 1]
            }
        },
        {
            "bc_name": "OUT",
            "bc_type": "PRESSURE",
            "bc_values": {
                "P": [1000, 1000],
                "t": [0, 1]
            }
        }
    ],
    "simulation_parameters": {
        "number_of_cardiac_cycles": 1,
        "number_of_time_pts_per_cardiac_cycle": 500,
        "steady_initial": false,
        "output_variable_based": true,
        "absolute_tolerance": 1e-9,
        "output_all_cycles": true
    },
    "vessels": [
        {
            "boundary_conditions": {
                "inlet": "IN"
            },
            "vessel_id": 0,
            "vessel_length": 1.0, 
            "vessel_name": "upstream_vessel",
            "zero_d_element_type": "BloodVessel",
            "zero_d_element_values": {
                "R_poiseuille": 0.0,
                "C": 0.0
            }
        },
        {
            "boundary_conditions": {},
            "vessel_id": 1,
            "vessel_length": 1.0,
            "vessel_name": "ventricle",
            "zero_d_element_type": "ChamberSphere",
            "zero_d_element_values": {
                "rho" : 1e3,
                "thick0" : 0.0142,
                "radius0" : 0.0236,
                "W1" : 10e3,
                "W2" : 40,
                "eta" : 70.0, 
                "sigma_max" : 185e3,
                "alpha_max": 30.0,
                "alpha_min": -30.0,
                "tsys": 0.170,
                "tdias": 0.484,
                "steepness": 0.005
            }
        },
        {
            "boundary_conditions": {},
            "vessel_id": 2,
            "vessel_length": 1.0,
            "vessel_name": "downstream_proximal_vessel",
            "zero_d_element_type": "BloodVessel",
            "zero_d_element_values": {
                "R_poiseuille": 8.0e6,
                "C": 2.5e-9
            }
        },
        {
            "boundary_conditions": {
                "outlet": "OUT"
            },
            "vessel_id": 3,
            "vessel_length": 1.0,
            "vessel_name": "downstream_distal_vessel",
            "zero_d_element_type": "BloodVessel",
            "zero_d_element_values": {
                "R_poiseuille": 1e8,
                "C": 1.0e-8
            }
        }
    ],
    "valves": [
        {
            "type": "ValveTanh",
            "name": "inlet_valve",
            "params": {
                "Rmax": 7e8,
                "Rmin": 0,
                "Steepness": 5.75e-4,
                "upstream_block": "upstream_vessel",
                "downstream_block": "ventricle"
            }
        },
        {
            "type": "ValveTanh",
            "name": "outlet_valve",
            "params": {
                "Rmax": 6.6650e9,
                "Rmin": 0,
                "Steepness": 5.75e-4,
                "upstream_block": "ventricle",
                "downstream_block": "downstream_proximal_vessel"
            }
        }
    ],
    "junctions": []
}    